<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><input type="text" name="name" placeholder="Name" value="<%= @recipe.name %>"></p>
  <p><input type="text" name="ingredients" placeholder="Ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><input type="text" name="cook_time" placeholder="Cook Time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" id="submit" value="Update">
</form>
